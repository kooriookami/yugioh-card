{
  "name": "yugioh-card",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "dev:node": "vite-node --watch src/server.js",
    "play": "vite --open /play/index.html",
    "build": "vite build",
    "build:lib": "npx tsc && vite build -- browser-lib && vite build -- node-lib",
    "preview": "vite preview",
    "publish": "npm publish dist/ --registry https://registry.npmjs.org",
    "lint": "eslint",
    "lint-fix": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kooriookami/yugioh-card"
  },
  "keywords": [
    "yugioh-card",
    "yugioh",
    "rush-duel",
    "ygo",
    "leafer",
    "canvas"
  ],
  "author": "kooriookami",
  "license": "ISC",
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "element-plus": "^2.11.5",
    "json-editor-vue": "^0.18.1",
    "normalize.css": "^8.0.1",
    "skia-canvas": "^2.0.2",
    "vue": "^3.5.22",
    "yugioh-card": "workspace:*"
  },
  "devDependencies": {
    "@iconify/vue": "^5.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "eslint": "^9.38.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.4.0",
    "jsonfile": "^6.2.0",
    "rollup-plugin-copy": "^3.5.0",
    "sass-embedded": "^1.93.2",
    "sort-package-json": "^3.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-node": "^3.2.4"
  },
  "engines": {
    "node": ">= 20"
  }
}
